<h1>New note</h1>

<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :course %>:
	<% @c = Course.find(@course) %> 
    <%= @c.name %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => "80x20" %>
  </div>
  <div class="actions">
  	<%= f.hidden_field :user_id, :value => @user.id %>
	<%= f.hidden_field :course_id, :value => @course %>
    <%= submit_or_cancel(f) %>
  </div>
<% end %>

