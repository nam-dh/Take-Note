<h1><center>Editing user</center></h1>
<br>
<br>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table>
  <tr><div class="field">
    <td><%= f.label :account %></td> 
    <td><%= @user.acc %></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <td><%= f.label :name %><br /></td>
    <td><%= f.text_field :name, :size => 40 %></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <td><%= f.label :email %><br /></td>
    <td><%= f.text_field :mail, :size => 40 %></td>
  </div>
  </tr>
  <div class="field">
    <td><%= f.label :Password %><br /></td>
    <td><%= f.password_field :password, :size => 40 %></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <td><%= f.label :Confirmation %><br /></td>
    <td><%= f.password_field :password_confirmation, :size => 40 %></td>
  </div>	
</table>
<br><br>
<center><%= submit_or_cancel(f) %></center>
<br><br>
If you don't want to use this service anymore. Click <%= link_to 'here', destroy_user_path, :confirm => 'Are you sure?', :method => :delete %> to destroy your account!
<% end %>
